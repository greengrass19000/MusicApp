<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SongListActivity"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@drawable/activity_gradient"
    >
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbarplayer">
    </androidx.appcompat.widget.Toolbar>
    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:id="@+id/viewpagerplayer">
    </androidx.viewpager.widget.ViewPager>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                android:gravity="center">
                <TextView
                    android:text="00:00"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_weight="0.5"
                    android:id="@+id/textviewtimesong"
                    android:textColor="#FFFFFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <SeekBar
                    android:id="@+id/seekbarsong"
                    android:layout_weight="9"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" />
                <TextView
                    android:text="99:99"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_weight="0.5"
                    android:id="@+id/textviewtimetotalsong"
                    android:textColor="#FFFFFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <ImageButton
                    android:src="@drawable/iconsuffle"
                    android:scaleType="fitXY"
                    android:background="@null"
                    android:id="@+id/imagebuttonsuffle"
                    android:layout_marginRight="15dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
                <ImageButton
                    android:src="@drawable/iconplay"
                    android:scaleType="fitXY"
                    android:background="@null"
                    android:id="@+id/imagebuttonplay"
                    android:layout_marginRight="15dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <ImageButton
                    android:src="@drawable/iconnext"
                    android:scaleType="fitXY"
                    android:background="@null"
                    android:id="@+id/imagebuttonnext"
                    android:layout_marginRight="15dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <ImageButton
                    android:src="@drawable/iconrepeat"
                    android:scaleType="fitXY"
                    android:background="@null"
                    android:id="@+id/imagebuttonrepeat"
                    android:layout_marginRight="15dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <ImageButton
                    android:src="@drawable/sleeptimer3"
                    android:scaleType="fitXY"
                    android:background="@null"
                    android:id="@+id/imagebuttonsleeptimer"
                    android:layout_marginRight="15dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
            </LinearLayout>
        </LinearLayout>

</LinearLayout>