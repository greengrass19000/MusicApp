<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="5dp"
    layout_height="wrap_content"
    layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="20sp"
            android:text="1"
            android:layout_marginLeft="13dp"
            android:id="@+id/textviewindexlist"
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="20sp"
            android:text="Ten bai hat"
            android:layout_toRightOf="@id/textviewindexlist"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:id="@+id/textviewsongname"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true" />
        <TextView
            android:textSize="20sp"
            android:text="Ca si"
            android:layout_toRightOf="@id/textviewindexlist"
            android:layout_below="@id/textviewsongname"
            android:textColor="#ffffff"
            android:id="@+id/textviewsinger"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageviewlikerate"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/iconlove" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>